{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Project1",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/Project1",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build/bin",
      "environment": [
        {
          "name": "DISPLAY",
          "value": "${env:DISPLAY}"
        }
      ],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}